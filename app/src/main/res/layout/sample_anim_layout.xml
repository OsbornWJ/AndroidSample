<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.jeven.sample.ui.anim.AnimationTextView
            android:id="@+id/animView"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="11122222222222222222211112111122221111
            11111111111111222222222222222222222211111111111111111
            11111111111112222222222222222222222
            22222222222222222222222
            111111111555555555555555555
            111111111111111111"
            />

    <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animation开始"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="16dp"/>

    <Button
            android:id="@+id/btn_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animator开始"
            android:layout_toRightOf="@id/btn_start"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="16dp"/>

    <TextView
            android:id="@+id/testAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试动画"
            android:layout_centerInParent="true"
            />

</RelativeLayout>